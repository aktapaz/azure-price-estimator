@page
@model GetPricesModel
@using System.Globalization
@{
    ViewData["Title"] = "Azure Price Estimator";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<form method="get" class="mb-4" novalidate>
    <div class="row g-3">
        <div class="col-md-6">
            <label for="location" class="form-label">Region</label>
            <select class="form-select" id="location" name="location" asp-for="Location">
                <option value="">Select Region</option>
                <option value="westeurope">EU West</option>
                <option value="northeurope">EU North</option>
                <option value="germanynorth">DE North</option>
                <option value="germanywestcentral">DE West Central</option>
            </select>
        </div>

        <div class="col-md-6">
            <label for="serviceFamily" class="form-label">Service Family</label>
            <select class="form-select" id="serviceFamily" name="serviceFamily" asp-for="ServiceFamily">
                <option value="">Select Service Family</option>
                <option value="Compute">Virtual Machines</option>
                <option value="Storage">Storage</option>
            </select>
        </div>

        <div class="col-md-6" id="serviceNameContainer">
            <label for="serviceName" class="form-label">Service Name</label>
            <select class="form-select" id="serviceName" name="serviceName" asp-for="ServiceName">
                <option value="">Select Service</option>
                <option value="Virtual Machines">Virtual Machines</option>
                <option value="Storage">Storage</option>
            </select>
        </div>

        <div class="col-md-6" id="vmSizeContainer">
            <label for="armSkuName" class="form-label">Size Options</label>
            <select class="form-select" id="armSkuName" name="armSkuName" asp-for="ArmSkuName">
                <option value="">Select Size</option>
                <optgroup label="General Purpose - Dsv3">
                    <option value="Standard_D2s_v3">D2s v3 (2 vCPU, 8 GB)</option>
                    <option value="Standard_D4s_v3">D4s v3 (4 vCPU, 16 GB)</option>
                    <option value="Standard_D8s_v3">D8s v3 (8 vCPU, 32 GB)</option>
                </optgroup>
            </select>
        </div>

        <div class="col-md-6" id="storageSizeContainer">
            <label for="storageSize" class="form-label">Storage Size (GB)</label>
            <input type="number" class="form-control" id="storageSize" name="storageSize" asp-for="StorageSize" 
                   min="1" max="65536" step="1" placeholder="Enter size (1-65536 GB)">
        </div>

        <div class="col-md-6" id="storageRedundancyContainer">
            <label for="storageRedundancy" class="form-label">Storage Redundancy</label>
            <select class="form-select" id="storageRedundancy" name="storageRedundancy" asp-for="StorageRedundancy">
                <option value="">Select Redundancy</option>
                <option value="Standard_LRS">LRS - Locally Redundant</option>
                <option value="Standard_ZRS">ZRS - Zone Redundant</option>
                <option value="Standard_GRS">GRS - Geo Redundant</option>
            </select>
        </div>

        <div class="col-md-6">
            <label for="currencyCode" class="form-label">Currency</label>
            <select class="form-select" id="currencyCode" name="currencyCode" asp-for="CurrencyCode">
                <option value="EUR">EUR (€)</option>
                <option value="USD">USD ($)</option>
                <option value="GBP">GBP (£)</option>
            </select>
        </div>

        <div class="col-md-6">
            <label for="usageHours" class="form-label">Usage Period</label>
            <select class="form-select" id="usageHours" name="usageHours" asp-for="UsageHours">
                <option value="730">Monthly (730h)</option>
                <option value="168">Weekly (168h)</option>
                <option value="24">Daily (24h)</option>
                <option value="8">Partial Day (8h)</option>
            </select>
        </div>

        <div class="col-12 mt-4">
            <button type="submit" class="btn btn-primary">Calculate Prices</button>
        </div>
    </div>
</form>

@if (Model.Prices?.Any() == true)
{
    var culture = new CultureInfo(Model.CurrencyCode switch
    {
        "EUR" => "fr-FR",
        "GBP" => "en-GB",
        "USD" => "en-US",
        _ => "fr-FR"
    });

var filteredPrices = Model.Prices
    .Where(p => !string.IsNullOrEmpty(p.SkuName))
    .Where(p => 
        // Handle Storage prices
        (p.ServiceName.Contains("Storage", StringComparison.OrdinalIgnoreCase) &&
         (string.IsNullOrEmpty(Model.StorageRedundancy) || 
          p.SkuName.Contains(Model.StorageRedundancy, StringComparison.OrdinalIgnoreCase)))
        ||
        // Handle VM prices
        (!p.ServiceName.Contains("Storage", StringComparison.OrdinalIgnoreCase) &&
         p.SkuName.Contains(Model.ArmSkuName ?? "", StringComparison.OrdinalIgnoreCase) &&
         !p.SkuName.Contains("Low Priority", StringComparison.OrdinalIgnoreCase) && 
         !p.SkuName.Contains("Spot", StringComparison.OrdinalIgnoreCase) &&
         !p.SkuName.Contains("AHUB", StringComparison.OrdinalIgnoreCase) &&
         !p.SkuName.Contains("Hybrid Benefit", StringComparison.OrdinalIgnoreCase))
    )
    .GroupBy(p => new { 
        p.ServiceName, 
        BaseSku = p.SkuName.Split('_')[0],
        PriceType = p.SkuName.Contains("3 Year") ? "3Year" :
                   p.SkuName.Contains("1 Year") ? "1Year" :
                   "PAYG"
    })
    .SelectMany(g => g.OrderBy(p => p.RetailPrice).Take(1))
    .OrderBy(p => p.ServiceName)
    .ThenBy(p => 
        p.SkuName.Contains("3 Year") ? 2 :
        p.SkuName.Contains("1 Year") ? 1 : 
        0
    );
    <div class="d-flex justify-content-end mb-3">
        <form method="post" asp-page-handler="Export">
            @foreach (var price in filteredPrices)
            {
                <input type="hidden" name="prices" value="@System.Text.Json.JsonSerializer.Serialize(price)" />
            }
            <button type="submit" class="btn btn-success">
                <i class="bi bi-file-earmark-excel"></i> Export to Excel
            </button>
        </form>
    </div>

    <div class="table-responsive mt-4">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Service</th>
                    <th>SKU</th>
                    <th>Region</th>
                    <th>License Type</th>
                    <th>Description</th>
                    <th class="text-end">Price/Hour</th>
                    <th class="text-end">Total Cost</th>
                    <th>Unit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var price in filteredPrices)
                {
                    string licenseType, description;
                    decimal totalCost;
                    
                    if (price.ServiceName.Contains("Storage"))
                    {
                        licenseType = "Storage";
                        description = $"{price.SkuName} storage with {Model.StorageSize:N0} GB capacity";
                        totalCost = price.RetailPrice * (Model.StorageSize ?? 1);
                    }
                    else if (price.SkuName.Contains("3 Year"))
                    {
                        licenseType = "Reserved Instance (3 Years)";
                        description = "3 year commitment with upfront payment required. Best value for long-term use.";
                        totalCost = price.RetailPrice * Model.UsageHours;
                    }
                    else if (price.SkuName.Contains("1 Year"))
                    {
                        licenseType = "Reserved Instance (1 Year)";
                        description = "1 year commitment with upfront payment required. Good balance of flexibility and savings.";
                        totalCost = price.RetailPrice * Model.UsageHours;
                    }
                    else
                    {
                        licenseType = "Pay-As-You-Go";
                        description = "No commitment required. Most flexible option with per-minute billing.";
                        totalCost = price.RetailPrice * Model.UsageHours;
                    }

                    var badgeColor = licenseType switch
                    {
                        "Storage" => "bg-info",
                        var lt when lt.Contains("Reserved") => "bg-success",
                        _ => "bg-primary"
                    };

                    <tr>
                        <td>@price.ServiceName</td>
                        <td>@price.SkuName</td>
                        <td>@price.Location</td>
                        <td><span class="badge @badgeColor">@licenseType</span></td>
                        <td>@description</td>
                        <td class="text-end">@price.RetailPrice.ToString("C4", culture)</td>
                        <td class="text-end">@totalCost.ToString("C2", culture)</td>
                        <td>@price.UnitOfMeasure</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}