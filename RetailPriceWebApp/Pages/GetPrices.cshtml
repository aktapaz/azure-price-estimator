@page
@model GetPricesModel
@{
    ViewData["Title"] = "Get Azure Retail Prices";
}

<h1>@ViewData["Title"]</h1>
<form method="get">
    <div>
        <label for="skuName">SKU Name:</label>
        <input type="text" id="skuName" name="skuName" value="@Model.SkuName" />
    </div>
    <div>
        <label for="productName">Product Name:</label>
        <input type="text" id="productName" name="productName" value="@Model.ProductName" />
    </div>
    <button type="submit">Get Prices</button>
</form>

@if (Model.Prices != null && Model.Prices.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ProductName</th>
                <th>MeterName</th>
                <th>RetailPrice</th>
                <th>UnitOfMeasure</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var price in Model.Prices)
            {
                <tr>
                    <td>@price.productName</td>
                    <td>@price.meterName</td>
                    <td>@price.retailPrice</td>
                    <td>@price.unitOfMeasure</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (!string.IsNullOrEmpty(Model.SkuName) || !string.IsNullOrEmpty(Model.ProductName))
{
    <p>No prices found for the specified filters.</p>
}